" Basic options ----------------------------------------------------------- {{{


let mapleader=","

set hidden
set encoding=utf-8
set modelines=0
set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set vb t_vb=
set list
"set listchars=tab:▸\ ,eol:¬,extends:❯,precedes:❮
set t_Co=256
" Attempt to get 256 colors whenever possible
if &term =~ "xterm"
	set t_Co=256
	if has("terminfo")
		let &t_Sf=nr2char(27).'[3%p1%dm'
		let &t_Sb=nr2char(27).'[4%p1%dm'
	else
		let &t_Sf=nr2char(27).'[3%dm'
		let &t_Sb=nr2char(27).'[4%dm'
	endif
endif
set textwidth=80
set formatoptions=qrn1
set colorcolumn=85
set gdefault
set cursorline " hilighter aktiv linje
set wildmenu " viser forslag til :kommandoer
set wildmode=list:longest
set ttyfast
set showcmd
set visualbell
set number
set spelllang=nb
set pastetoggle=<F3>
if has('gui_running')
	set guioptions-=T  " no toolbar
	set guioptions-=m " Removes menu
	set guifont=Consolas
	colorscheme molokai
endif

syntax on


" vim-latex-ting
let g:tex_flavor='latex'
let g:Tex_DefaultTargetFormat='pdf'
let g:Tex_MultipleCompileFormats='dvi,pdf'
let g:Tex_ViewRule_pdf='evince &'
set backspace=indent,eol,start

" Erstatter \Pi med unicode-tegnet i mathmode i latex bl.a.
set conceallevel=2
hi Conceal guibg=NONE ctermbg=NONE

map <F2> :NERDTreeToggle<CR>
filetype plugin on
colorscheme molokai

" Maximizes the GVIM-window on start
autocmd GUIEnter * simalt ~x

" Backups {{{
